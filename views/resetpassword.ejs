<%- include('./partials/header') %>
<h1 class="cover-heading">Password reset page</h1>
<form id="resetpassword-form" class="form-signin">
    <div class="text-center mb-3">
        <img class="mb-4" src="/img/logo.jpg" alt="" width="72" height="72">
    </div>

    <div class="form-label-group">
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required>
        <label for="email">Email address</label>
    </div>

    <div class="form-label-group">
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
        <label for="password">Password</label>
    </div>

    <div class="form-label-group">
        <input type="text" id="code" name="code" class="form-control" placeholder="Code" required>
        <label for="code">Code</label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit" id="resetpasswordbtn" name="resetpasswordbtn"
        value="resetbtn">Reset</button>
<%- include('./partials/footer') %>
